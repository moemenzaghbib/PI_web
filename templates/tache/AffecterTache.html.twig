{% extends'Backbase.html.twig' %}

{% block body %}


    <div class="card" style="width: 1100px;margin-left: 490px;margin-top: 60px">
        <div class="card-body">
            <h5 class="card-title">List des Taches</h5>
            <!-- Bordered Table -->
            <table class="table" >
                <thead>
                <tr>
                    <th scope="col">Numéro Tache</th>
                    <th scope="col">Nom Tache</th>
                    <th scope="col">Temps Alloué</th>
                    <th scope="col">Etat Tache</th>
                    <th scope="col">Importance</th>
                    <th scope="col">Responsable</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for tache in taches %}
                    <tr>
                        <td>{{ tache.numTache }}</td>
                        <td>{{ tache.nomTache }}</td>
                        <td>{{ tache.neededTime }}</td>
                        <td>{{ tache.etatTache }}</td>
                        <td>{{ tache.importance }}</td>
                        <td>{{ tache.employee }}</td>
                        <td>
                            <a href="{{ path('Affecter_tache_emp_app', {'idTache': tache.idTache}) }}" class="btn btn-dark">Affecter Tache</a>
                                                    </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <!-- End Bordered Table -->
            <h5 class="card-title">List des Employees</h5>
            <!-- Bordered Table -->
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Cin</th>
                    <th>Photo</th>
                    <th>EquipeId</th>
                    <th>ServiceId</th>
                    <th>Role</th>
                    <th>MotDePasse</th>
                                  </tr>
                </thead>
                <tbody>
                {% for employee in employees %}
                    <tr>
                        <td>{{ employee.id }}</td>
                        <td>{{ employee.nom }}</td>
                        <td>{{ employee.prenom }}</td>
                        <td>{{ employee.email }}</td>
                        <td>{{ employee.cin }}</td>
                        <td>{{ employee.photo }}</td>
                        <td>{{ employee.equipeId }}</td>
                        <td>{{ employee.serviceId }}</td>
                        <td>{{ employee.role }}</td>
                        <td>{{ employee.motDePasse }}</td>
                       </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>




{% endblock %}
