{% extends 'Backbase.html.twig' %}
{% block body %}

    <div style="display: flex;align-items: center;justify-content: center;margin-top: 100px;margin-left: 300px">

        <div class="card" style="width: 700px;height: 600px;">
            <div class="card-body">
                <h5 class="card-title">Ajouter une nouvelle tache</h5>

                <!-- General Form Elements -->
                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Numero Tache</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.numTache,{'attr':{'class':'form-control'}})}}
                        {{ form_errors(form.numTache,{'attr':{'class':'text-danger'}})}}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Nom Tache</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nomTache,{'attr':{'class':'form-control'}})}}
                        {{ form_errors(form.nomTache,{'attr':{'class':'text-danger'}})}}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Temps Alou√©</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.neededTime,{'attr':{'class':'form-control'}})}}
                        {{ form_errors(form.neededTime,{'attr':{'class':'text-danger'}})}}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Etat Tache</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.etatTache,{'attr':{'class':'form-control'}})}}
                        {{ form_errors(form.etatTache,{'attr':{'class':'text-danger'}})}}
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Importance tache</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.importance,{'attr':{'class':'form-control'}})}}
                        {{ form_errors(form.importance,{'attr':{'class':'text-danger'}})}}
                    </div>
                </div>



                <div class="row mb-3" style="margin-left: 205px">

                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

                        <button type="reset" class="btn btn-primary">Reset</button>
                        <a href="{{ path('app1') }}" class="btn btn-primary">Retour</a>
                         </div>
                </div>

                {{form_end(form)}}<!-- End General Form Elements -->

            </div>
        </div>

    </div>
{% endblock %}