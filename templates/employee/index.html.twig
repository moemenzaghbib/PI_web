<!DOCTYPE html>

<title>Employee index</title>

{% block body %}
    <h1>Employee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Cin</th>
                <th>Photo</th>
                <th>EquipeId</th>
                <th>ServiceId</th>
                <th>Role</th>
                <th>MotDePasse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.nom }}</td>
                <td>{{ employee.prenom }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.cin }}</td>
                <td>{{ employee.photo }}</td>
                <td>{{ employee.equipeId }}</td>
                <td>{{ employee.serviceId }}</td>
                <td>{{ employee.role }}</td>
                <td>{{ employee.motDePasse }}</td>
                <td>
                    <a href="{{ path('app_employee_show', {'id': employee.id}) }}">show</a>
                    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_employee_new') }}">Create new</a>
{% endblock %}
